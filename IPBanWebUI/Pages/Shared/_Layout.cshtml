<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IPBan Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <style>
        :root {
            --sidebar-width: 240px;
            --sidebar-bg-start: #111827;
            --sidebar-bg-end: #1e2a4a;
            --sidebar-accent: #3b82f6;
            --body-bg: #f1f5f9;
            --card-radius: 0.875rem;
            --card-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }
        body {
            background-color: var(--body-bg);
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            color: #1e293b;
        }
        .sidebar {
            width: var(--sidebar-width);
            min-height: 100vh;
            background: linear-gradient(180deg, var(--sidebar-bg-start) 0%, var(--sidebar-bg-end) 100%);
            position: fixed;
            top: 0; left: 0;
            display: flex;
            flex-direction: column;
            z-index: 100;
            box-shadow: 2px 0 12px rgba(0,0,0,0.18);
        }
        .sidebar .brand {
            padding: 1.5rem 1.25rem 1.1rem;
            color: #fff;
            font-size: 1.25rem;
            font-weight: 700;
            letter-spacing: 0.5px;
            border-bottom: 1px solid rgba(255,255,255,0.08);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .sidebar .brand .brand-icon {
            width: 32px; height: 32px;
            background: var(--sidebar-accent);
            border-radius: 8px;
            display: flex; align-items: center; justify-content: center;
            font-size: 1rem; color: #fff; flex-shrink: 0;
        }
        .sidebar .brand span { color: #93c5fd; }
        .sidebar .nav-section-label {
            padding: 1rem 1.25rem 0.35rem;
            font-size: 0.7rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            color: rgba(255,255,255,0.3);
        }
        .sidebar .nav-link {
            color: rgba(255,255,255,0.65);
            padding: 0.65rem 1.25rem;
            font-size: 0.9rem;
            border-radius: 0;
            display: flex;
            align-items: center;
            gap: 0.65rem;
            transition: background 0.15s, color 0.15s;
            position: relative;
        }
        .sidebar .nav-link:hover {
            color: #fff;
            background: rgba(255,255,255,0.07);
        }
        .sidebar .nav-link.active {
            color: #fff;
            background: rgba(59,130,246,0.22);
        }
        .sidebar .nav-link.active::before {
            content: '';
            position: absolute;
            left: 0; top: 4px; bottom: 4px;
            width: 3px;
            background: var(--sidebar-accent);
            border-radius: 0 3px 3px 0;
        }
        .sidebar .nav-link i { font-size: 1rem; width: 1.1em; text-align: center; }
        .main-content {
            margin-left: var(--sidebar-width);
            padding: 1.75rem 2rem;
            min-height: 100vh;
        }
        .topbar {
            background: #fff;
            border-radius: var(--card-radius);
            padding: 1rem 1.5rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: var(--card-shadow);
            border: 1px solid #e2e8f0;
        }
        .topbar h1 { font-size: 1.25rem; font-weight: 700; margin: 0; color: #1e293b; }
        .stat-card {
            background: #fff;
            border-radius: var(--card-radius);
            padding: 1.35rem 1.5rem;
            box-shadow: var(--card-shadow);
            border: 1px solid #e2e8f0;
            display: flex;
            align-items: center;
            gap: 1rem;
            transition: box-shadow 0.2s;
        }
        .stat-card:hover { box-shadow: 0 4px 16px rgba(0,0,0,0.12); }
        .stat-card .stat-icon {
            width: 50px; height: 50px;
            border-radius: 0.75rem;
            display: flex; align-items: center; justify-content: center;
            font-size: 1.4rem;
            flex-shrink: 0;
        }
        .stat-card .stat-value { font-size: 1.75rem; font-weight: 700; line-height: 1.1; }
        .stat-card .stat-label { font-size: 0.8rem; color: #64748b; margin-top: 0.2rem; font-weight: 500; }
        .card-panel {
            background: #fff;
            border-radius: var(--card-radius);
            box-shadow: var(--card-shadow);
            border: 1px solid #e2e8f0;
            overflow: hidden;
        }
        .card-panel .card-header-panel {
            padding: 0.9rem 1.5rem;
            border-bottom: 1px solid #f1f5f9;
            font-weight: 600;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: #fafafa;
        }
        .table th { font-size: 0.8rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.04em; color: #64748b; }
        .table td { font-size: 0.88rem; vertical-align: middle; }
        .badge { font-size: 0.75rem; font-weight: 600; }
        code { font-size: 0.85em; color: #0f172a; background: #f1f5f9; padding: 0.15em 0.4em; border-radius: 4px; }
        #toast-container { position: fixed; bottom: 1.5rem; right: 1.5rem; z-index: 9999; }
        .progress { border-radius: 99px; background: #e2e8f0; }
        .progress-bar { border-radius: 99px; }
    </style>
</head>
<body>
    <aside class="sidebar">
        <div class="brand">
            <div class="brand-icon"><i class="bi bi-shield-fill"></i></div>
            IP<span>Ban</span>
        </div>
        <div class="nav-section-label">Monitor</div>
        <nav class="nav flex-column">
            <a class="nav-link @(ViewData["ActivePage"] as string == "Index" ? "active" : "")" href="/">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
            <a class="nav-link @(ViewData["ActivePage"] as string == "Status" ? "active" : "")" href="/Status">
                <i class="bi bi-activity"></i> Real-Time Status
            </a>
            <a class="nav-link @(ViewData["ActivePage"] as string == "Banned" ? "active" : "")" href="/Banned">
                <i class="bi bi-shield-x"></i> Banned IPs
            </a>
            <a class="nav-link @(ViewData["ActivePage"] as string == "Failed" ? "active" : "")" href="/Failed">
                <i class="bi bi-exclamation-triangle"></i> Failed Logins
            </a>
        </nav>
        <div class="nav-section-label">Settings</div>
        <nav class="nav flex-column">
            <a class="nav-link @(ViewData["ActivePage"] as string == "Config" ? "active" : "")" href="/Config">
                <i class="bi bi-gear"></i> Configuration
            </a>
        </nav>
        <div class="mt-auto px-3 py-3" style="font-size:0.75rem;color:rgba(255,255,255,0.3);">
            IPBan Web UI &copy; @DateTime.UtcNow.Year
        </div>
    </aside>

    <main class="main-content">
        @RenderBody()
    </main>

    <div id="toast-container"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showToast(msg, type = 'success') {
            const container = document.getElementById('toast-container');
            const id = 'toast-' + Date.now();
            const html = `<div id="${id}" class="toast align-items-center text-bg-${type} border-0 show mb-2" role="alert">
                <div class="d-flex">
                    <div class="toast-body">${msg}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>`;
            container.insertAdjacentHTML('beforeend', html);
            setTimeout(() => document.getElementById(id)?.remove(), 4000);
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
    ViewData["ActivePage"] = "";
}

<div class="topbar">
    <h1><i class="bi bi-exclamation-circle text-danger me-2"></i>Error</h1>
</div>

<div class="card-panel p-4">
    <h2 class="text-danger">An error occurred.</h2>
    @if (Model.ShowRequestId)
    {
        <p>Request ID: <code>@Model.RequestId</code></p>
    }
</div>
